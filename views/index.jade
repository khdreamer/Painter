doctype html
html
  head
    meta(charset="UTF-8")
    title Painter
    link(rel="stylesheet" type="text/css" href="stylesheets/style.css")
    link(rel="stylesheet" media="screen" type="text/css" href="colorpicker/css/colorpicker.css")
    link(rel="stylesheet" type="text/css" href="jquery-ui/css/ui-lightness/jquery-ui-1.10.4.custom.min.css")
    script(src="javascripts/processing-1.4.1.min.js")
    script(src="javascripts/jquery-1.11.0.min.js")
    script(src="jquery-ui/js/jquery-ui-1.10.4.custom.min.js")
    script(src="javascripts/sketch.js")
    script(src="colorpicker/js/colorpicker.js")
    script(src="javascripts/buttons.js")
    script(src="javascripts/layers.js")

  body
    #toolbox
      .tool_btn.lsf-icon.selected(type="brush" icon="pencil")
      .tool_btn.lsf-icon(type="eraser" icon="eraser")
      .tool_btn.lsf-icon(type="text" icon="font")
      .tool_btn.lsf-icon(type="spray" icon="spray")
      .tool_btn.lsf-icon(type="zoom" icon="zoomin")
      .tool_btn.lsf-icon(type="drag" icon="handdrag")
      .color
    #sketch_wrapper
      canvas#main(data-processing-sources="processing/painter.pde")
    #layers
      .blank(style="border-bottom: 1px solid #3A3A3A")
      ul
        li.layer.current background
      .blank(style="border-bottom: 1px solid #555")
      #layer_func
        .layer_btn.lsf-icon(icon="plus" type="create")
        .layer_btn.lsf-icon(icon="trash" type="delete")
    #colorpicker
    #file_setup_wrapper
      #file_setup
        form
          .title New File
          #name
            |Name: 
            input(type="text" name="name" value="Untitled")
            span
            br
          #size
            |Width: 
            input(type="text" name="width" value="454")
            span px
            br
            |Height: 
            input(type="text" name="height" value="340")
            span px
            br
          #ok
            input(type="button" value="OK")
    script.
      $(window).resize(function(){

        toolbox_h = $(window).height() - 8;
        $("div#toolbox").height(toolbox_h);
        console.log("resize");

      });

      
      

